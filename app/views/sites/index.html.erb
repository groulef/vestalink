<h1>Immeubles</h1>

<table>
  <thead>
    <tr>
      <th>Reference</th>
      <th>Name</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.reference %></td>
        <td><%= site.name %></td>
        <td><%= site.address %></td>
        <td><%= site.zipcode %></td>
        <td><%= site.city %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

